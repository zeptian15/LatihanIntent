<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/custom_bg">

    <Button
        android:id="@+id/expilicitIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:padding="20dp"
        android:text="Klik disini untuk Explicit Intent"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/impicitIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:padding="20dp"
        android:text="Klik disini untuk Impicit Intent"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/loopingIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:padding="20dp"
        android:text="Intent Looping"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:background="@drawable/custom_button"/>


</RelativeLayout>